{% extends 'base.html.twig' %}

{% block title %}Clubs{% endblock %}

{% block body %}

    <div class="jumbotron">
        <div class="container">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="form-group">
                <div class="col-sm-6">
                    {{ form_row(form.saison) }}
                </div>
                <div class="col pull-right">
                    <button class="btn btn-primary">Rechercher</button>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>



    <table class="table" border="5" bordercolor="red" align="center">
        <thead>
        <tr>
            <th></th>
            <th>nom</th>
            <th>nombre de joueurs</th>
            <th>logo</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ club.nom }}</td>
                <td>{{ club.joueurs|length }}</td>

                <td><img src="{{ asset(club.logos[0].path) }}" style="width: 50px; height: 50px;"  /></td>
                <td>
                    <a href="{{ path('joueur', {'id': club.id }) }}">Voir les joueurs</a>
                    <br><br>
                    <a href="{{ path('historique', {'id': club.id }) }}">Historique des logos</a>

                </td>


            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas encore de clubs dans la base de donn√©es</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

